

<p id="notice"><%= notice %></p>

<h1>Listing Books</h1>

<div class="row">
  <div class="col-md-8">
<%= form_tag chapters_path, method: :get do %>
    <p>
    <form class="form-inline">
      <div class="form-group">
        <%= text_field_tag :q, params[:q], class:"form-control" %>
      </div>
      <%= submit_tag "Search", name: nil, class:"btn btn-success" %>
    </form>
    </p>
<% end %>
<br>

<table class="table">
  <thead>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>content</th>
    <th>Updated</th>
    <th>Inspect</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @chapters.each do |c| %>
      <tr>
        <td><%= c.title %></td>
        <td><%= c.description %></td>
        <td><%= c.content %></td>
        <td><%= c.updated_at %></td>
        <td><%= @chapters.first.inspect %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>
  </div>
</div>