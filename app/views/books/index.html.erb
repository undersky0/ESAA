

<p id="notice"><%= notice %></p>

<h1>Listing Books</h1>

<%= form_tag books_path, method: :get do %>
    <p>
    <form class="form-inline">
      <div class="form-group">
      <%= text_field_tag :q, params[:q], class:"form-control" %>
      </div>
      <%= submit_tag "Search", name: nil, class:"btn btn-success" %>
    </form>
    </p>
<% end %>
<br>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Book Type</th>
      <th>Fiction?</th>
      <th>Published</th>
      <th>Price</th>
      <th>Inspect</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.book_type %></td>
        <td><%= book.fiction %></td>
        <td><%= book.published_at %></td>
        <td><%= book.price %></td>
        <td><%= @books.first.inspect %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path %>
